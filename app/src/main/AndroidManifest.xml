<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.wastemanagement">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WasteManagement"
        android:usesCleartextTraffic="true">
        <activity android:name=".Student.Complaint" />

        <activity android:name=".Admin.AddStaff" />
        <activity android:name=".Admin.ManageStaff" />
        <activity android:name=".Admin.ViewAlerts" />
        <activity android:name=".Admin.UsersList" />
        <activity android:name=".Admin.Feedback_Complain" />
        <activity android:name=".Admin.AddBins" />
        <activity android:name=".Admin.ManageBins" />
        <activity android:name=".Dashboard" />
        <activity
            android:name=".SignUp"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".LoginActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

</manifest>