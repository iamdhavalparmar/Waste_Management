<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Fragments.ManageProfileFragment"
        android:orientation="vertical"
        android:background="@drawable/gradient_bg"
        android:padding="10dp"
        android:layout_gravity="center">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_feedback"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:titleTextAppearance="@dimen/_12sdp"
            app:layout_collapseMode="pin">
            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_margin="@dimen/_10sdp"
                android:src="@drawable/ic_back"
                android:id="@+id/backbutton"/>
        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manage Profile"
            android:textSize="@dimen/_20sdp"
            android:textAlignment="textStart"
            android:fontFamily="@font/montserrat_black"
            android:textColor="@color/dark_green"
            android:layout_marginTop="50dp"
            android:layout_marginStart="25dp"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:textColorHint="@color/black"
            android:paddingTop="10dp">

            <EditText
                android:id="@+id/staff_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:drawableStart="@drawable/ic_face_24px"
                android:ems="10"
                android:backgroundTint="@color/black"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_light"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="20dp"
            android:textColorHint="@color/black"
            android:paddingTop="10dp">

            <EditText
                android:id="@+id/staff_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:drawableStart="@drawable/ic_smile"
                android:ems="10"
                android:backgroundTint="@color/black"
                android:inputType="text"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_light"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:textColorHint="@color/black"
            android:paddingTop="10dp">

            <EditText
                android:id="@+id/staff_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_call"
                android:ems="10"
                android:backgroundTint="@color/black"
                android:inputType="phone"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_light"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:textColorHint="@color/black"
            android:paddingTop="10dp">

            <EditText
                android:id="@+id/staff_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               
                android:drawableStart="@drawable/ic_lock_24px"
                android:ems="10"
                android:backgroundTint="@color/black"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_light"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/staff_submit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="Submit"
            android:textColor="#ecffe2"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:background="@drawable/button_rounded"
            android:fontFamily="@font/montserrat_regular"/>
    </LinearLayout>
